<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".PortfolioActivity"
    android:background="@android:color/holo_blue_light">

    <Button
        style="@style/ButtonStyle"

        android:text="@string/portfolioButton1_text"

        android:width="300dp"
        android:onClick="button1Click"

        android:layout_marginTop="70dp"
         />

    <Button
        style="@style/ButtonStyle"
        android:text="@string/portfolioButton2_text"

        android:width="300dp"
        android:onClick="button2Click"
        android:layout_marginTop="130dp"
        android:id="@+id/button2" />


    <Button
        style="@style/ButtonStyle"

        android:text="@string/portfolioButton3_text"

        android:onClick="button3Click"

        android:layout_marginTop="190dp"
        android:id="@+id/button3" />


    <Button
        style="@style/ButtonStyle"

        android:text="@string/portfolioButton4_text"


        android:onClick="button4Click"
        android:layout_marginTop="250dp"
        android:id="@+id/button4"
        android:background="@android:color/holo_red_light" />

        <Button

        android:text="@string/portfolioButton5_text"
        style="@style/ButtonStyle"

        android:onClick="button5Click"
        android:layout_marginTop="310dp"
        android:background="@android:color/holo_red_light" />

    <Button
        style="@style/ButtonStyle"

        android:text="@string/portfolioButton6_text"
        android:layout_centerHorizontal="true"
        android:width="300dp"
        android:onClick="button6Click"
        android:layout_marginTop="370dp"
        android:background="@color/button_material_light" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/portfolioheader"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    ... />

</RelativeLayout>
